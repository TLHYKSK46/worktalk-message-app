<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#227093"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.GirisActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:text=" WorkTalk"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"

     android:src="@drawable/teamwork"

        />
        <EditText

            android:id="@+id/login_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:hint="Mail Adresinizi giriniz"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"

            android:textColorHint="#d1ccc0"
            android:textColor="#d1ccc0"/>


        <EditText

            android:id="@+id/login_sifre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="Parola giriniz"
            android:inputType="textPassword"
            android:textColorHint="#d1ccc0"
            android:textColor="#d1ccc0"/>
        <Button
            android:id="@+id/girisYapButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#3498db"
            android:text="Giris Yap"
            android:textColor="#ecf0f1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kay覺tOlText"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:textColor="#999"
            android:textSize="12dp"
            android:text="Hesab覺n覺z Yokmu? Kay覺t Ol"/>




</LinearLayout>