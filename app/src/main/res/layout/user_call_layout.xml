<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userCardLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:layout_marginBottom="3dp"
    android:clickable="true"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userFotoCircleCall"
                android:layout_width="48dp"
                android:layout_height="48dp"

                android:src="@drawable/user18dp" />

            <LinearLayout
                android:id="@+id/callLayoutTÄ±kla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:clickable="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/adSoyadTextCall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Ad Soyad"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/aramaTypeImgCall"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@drawable/circle_online_green" />
                    <TextView
                        android:id="@+id/telefonNoTextCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textSize="10dp"
                     android:layout_marginRight="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="telefonno" />

                    <TextView
                        android:id="@+id/aramaZamanTextCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textSize="8dp"

                        android:padding="5dp"
                        android:text="Zaman" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/callImgButon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:src="@drawable/call_black_18dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/keyCall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"></TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>